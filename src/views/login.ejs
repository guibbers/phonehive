<%- include('includes/head') %>
<%- include('includes/navbar') %>

<div class="container mx-auto">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Sign up or Sign in</h1>
            <p class="text-center lead">Connect with your contacts anytime, anywhere with PhoneHive.</p>
            <p class="text-center lead">Create your account or log in</p>
            
            <div class="row">
                <div class="col-lg">
                    <h4>Signup</h4>
                    <small class="form-text text-muted">If you don't have an account yet, create one by filling the form bellow.</small>
                    <form action="/login/register" method="POST" class="my-3">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label>Email address</label>
                          <input type="email" class="form-control" name="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" placeholder="Password">
                        </div>
                        <button type="submit" class="my-2 btn btn-primary">Register</button>
                      </form>
                </div>
                
                <div class="col-lg">
                    <h4>Login</h4>
                    <small class="form-text text-muted">If you already have a PhoneHive account, signin by entering your e-mail and password bellow.</small>
                    <form action="/login/signin" method="POST" class="my-3">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" class="form-control"placeholder="Enter email">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword1">Password</label>
                          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <button type="submit" class="my-2 btn btn-primary">Login</button>
                      </form>
                </div>
            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
